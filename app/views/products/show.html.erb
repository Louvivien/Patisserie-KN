<section class="slice sct-color-1">
	<div class="container">
    <!-- Product gallery and Description -->
    <div class="row">
    	<div class="col-lg-5">
        <div class="gallery-container">
        	<% if @product.image.attached? %>
        		<%= image_tag @product.image.variant(resize: "450x450"), class: "img-responsive"%>
          <% else %>
          	<%= image_tag("no-image.png", size: "450") %>
          <% end %>
        </div>
      </div>

      <div class="col-lg-7">
        <div class="px-2">
          <!-- Product description -->
          <div class="product-description-wrapper">
            <!-- Product title -->
            <h2 class="product-title heading heading-3 strong-400 text-capitalize">
              <%= @product.name %>
            </h2>
            <hr>

						<!-- Product description -->
	          <div class="product-short-text mt-4">
	              <h3 class="heading heading-xs strong-500 text-uppercase">
	                  Description:
	              </h3>
	              <p>
	                 <%= @product.description %>
	              </p>
	          </div>
            <hr>
						<%= form_with model: @item, url: items_path do |f| %>
							<div class="row d-flex justify-content-between align-items-center">
								<div class="col-md-4">
									<div class="product-price py-1">
									<%= @product.price %>€/part
									</div>
								</div>
						    <div class="col-md-4">
				  	      <div class="form-group">
										Nombre de part :
										<%= f.select(:quantity, options_for_select([[6, 6], [8, 8], [10, 10]]), class: "form-control form-control-lg") %>
							  	</div>
							  </div>
							</div>

							<div class="row">
								<div class="col-md-12">
									<div class="form-group">
										Si vous souhaitez personnaliser votre commande avec un message écrit en chocolat, vous pouvez remplir le champs ci dessous (facturé 2€50):
										<%= f.text_field :personalization, placeholder: "Joyeux Anniversaire Sarah !", class: "form-control form-control-lg" %>
									</div>
								</div>
							</div>


							<div class="row">
								<div class="col-md-12">
									<div class="form-group">
										<%= f.label :comment, 'Voulez vous ajouter un commentaire pour ce produit ?',class: "control-label" %><br />
										<%= f.text_area :comment, class: "form-control form-control-lg" %>
									</div>
								</div>
							</div>

	            <div class="row">
                <!-- Add to cart button -->
								<%= button_tag type: 'submit', class: "btn btn-styled btn-block btn-base-1 btn-icon-left" do %>
					      	<i class="icon ion-ios-cart" aria-hidden="true"></i>Ajouter au panier
								<% end %>
	            </div>
						<% end %>
						<% if user_signed_in? %>
							<% if current_user.admin == true %>
								<%= link_to "Modifie ton produit", edit_product_path(@product), class: "btn btn-primary"%>
								<%= link_to "Supprimer le produit", product_path(@product), method: :delete, class: "btn btn-danger"%>
							<% end %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
