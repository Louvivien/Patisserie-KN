<section class="slice sct-color-1" id="sct_products">
  <div class="container">
    <div class="row-wrapper">
      <div class="row cols-xs-space cols-sm-space cols-md-space">
      	<% @products.each do |product| %>
          <div class="col-lg-3 col-md-6">
            <div class="block product no-radius">
              <% if product.image.attached? %>
                <%= link_to image_tag(product.image, size: "250", class: "view view-first"), product_path(product), class: "product-image" %>
              <% else %>
                <%= link_to image_tag("no-image.png"), product_path(product) %>
              <% end %>
              <div class="block-body px-0">
                <%= link_to "#{product.name}", product_path(product), class: "heading heading-6 strong-500 text-capitalize mb-0 d-flex justify-content-center" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
