<section class="slice-xl page-title border-bottom has-bg-cover bg-size-cover background-perso-1" >
  <div class="container mask-container">
    <div class="row">
      <div class="col-md-6">
        <h3 class="heading heading-1 strong-600 text-capitalize mb-1">
          <span>Mon panier</span>
        </h3>
        <ol class="breadcrumb breadcrumb--style-2">
          <li class="breadcrumb-item"><%= link_to "Accueil", root_path %></li>
          <li class="breadcrumb-item"><%= link_to "Boutique", patisserie_path %></li>
          <li class="breadcrumb-item"><a href="#">Paiement</a></li>
        </ol>
        <!-- Fluid text paragraph -->
        <div class="pb-4 mt-4">
          <p class="lead">
            Parturient mus aenean a suspendisse est ligula eu dui a ultricies dictumst porttitor rhoncus a vestibulum.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="slice sct-color-1">
  <div class="container">
    <div class="row justify-content-center">
      <% if user_signed_in? && current_user.items.any? %>
        <div class="col-lg-12 mt--150">
          <div class="card">
            <div class="card-body">
              <table class="table-cart">
                <thead>
                  <tr>
                    <th class="product-image"></th>
                    <th class="product-name">Produit</th>
                    <th class="product-quanity d-none d-md-table-cell">Nombre de part</th>
                    <th class="product-total">Prix</th>
                    <th class="product-remove"></th>
                  </tr>
                </thead>
                <tbody>
                  <% current_user.items.each do |item| %>
                    <!-- Cart item -->
                    <tr class="cart-item">
                      <td class="product-image">
                        <% if item.product.image.attached? %>
                          <%= image_tag item.product.image.variant(resize: "50*50"), class: "img-responsive"%>
                        <% else %>
                          <%= image_tag("no-image.png", size: "50") %>
                        <% end %>
                      </td>
                      <td class="product-name">
                        <span class="d-block dc-product-name text-capitalize strong-600 mb-1">
                          <%= item.product.name %>
                        </span>
                        <span class="personalization-police"><%= item.personalization %></span>
                      </td>
                      <td class="product-quantity d-none d-md-table-cell">
                        <div class="input-group input-group--style-2 pr-4">
                          <%= item.quantity %>
                        </div>
                      </td>
                      <td class="product-total">
                        <span><%= item.price %> €</span>
                      </td>
                      <td class="product-remove">
                        <%= link_to "<i class='icon ion-md-trash'></i>".html_safe, '#' %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
          <div class="row align-items-center pt-5">
            <div class="col-6">
              <%= link_to "<i class='icon ion-ios-arrow-back'></i> Revenir à la boutique".html_safe, patisserie_path, class: "link link--style-3" %>
            </div>
            <div class="col-6 text-right">
              <%= link_to "Procéder au paiement", '#', class: "btn btn-styled btn-base-1" %>
            </div>
          </div>
        </div>
        <% else %>
        <div class="col-lg-7">
          <div class="text-center">
            <div class="d-block font-size-3 font-size-md-6 c-gray-light">
              <i class="icon-hotel-restaurant-105"></i>
            </div>

            <h2 class="heading heading-3 strong-600">Your cart is empty.</h2>
            <p class="mt-4 px-5">
              Your cart is currently empty. Return to our shop and check out the latest offers.
              We have some great items that are waiting for you.
            </p>
            <a href="#" class="btn btn-styled btn-base-1 mt-5">
              Go shopping
            </a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
