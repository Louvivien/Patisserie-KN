<section class="slice-lg has-bg-cover bg-size-cover">
  <div class="container">
      <div class="row justify-content-center cols-xs-space">
          <div class="col-lg-4">
              <div class="form-card form-card--style-2 z-depth-2-top">
                  <div class="form-header text-center">
                      <div class="form-header-icon">
                          <i class="icon ion-ios-lock"></i>
                      </div>
                  </div>
                  <div class="form-body">
                      <div class="text-center px-2">
                          <h4 class="heading heading-4 strong-400 mb-4">Changez le mot de passe</h4>
                      </div>
                      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, class: "form-default") do |f| %>
                      <%= devise_error_messages! %>
                      <%= f.hidden_field :reset_password_token %>
                      <div class="row">
                          <div class="col-12">
                              <div class="form-group">
                                <%= f.label :password, "Nouveau mot de passe (6 caractÃ¨res minimum)" %><br />
                                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control form-control-lg" %>
                              </div>
                          </div>
                      </div>
                      <div class="row">
                          <div class="col-12">
                              <div class="form-group">
                                <%= f.label :password_confirmation, "Confirmer le mot de passe" %><br />
                                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control form-control-lg" %>
                              </div>
                          </div>
                      </div>
                      <%= f.submit "Envoyer", class: "btn btn-styled btn-lg btn-block btn-base-1 mt-4" %>
              <% end %>
              <%= render "users/shared/links" %>
                  </div>  
              </div>
          </div>
      </div>
  </div>
</section>