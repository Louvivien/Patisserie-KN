<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.fields_for :profile do |ff| %>
    <div class="field">
      <%= ff.label :first_name %><br />
      <%= ff.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    </div>
    <div class="field">
      <%= ff.label :last_name %><br />
      <%= ff.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    </div>
    <div class="field">
      <%= ff.label :phone_number %><br />
      <%= ff.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(laissez vide si vous ne voulez pas le changer)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(nous avons besoin du mot de passe actuel pour valider les changements)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Êtes-vous sûr?" }, method: :delete %></p>

<%= link_to "Back", :back %>
